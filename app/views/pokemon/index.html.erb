<h1>Pok√©dex</h1>

<!-- List of pokemon -->
<ul class="pokedex-list">
  <% @pokemon.each do |pkmn| %>
    <li>
      <button class="js-show-pokemon btn btn-link"
          data-pokemon-uri="<%= pkmn["resource_uri"] %>">
        <%= pkmn["name"] %>
      </button>
    </li>
  <% end %>
</ul>


<!-- Pokemon modal view (hidden at first) -->
<div class="modal fade js-pokemon-modal">
  <div class="modal-dialog">
    <div class="modal-content">

      <div class="modal-header">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>

        <h3 class="modal-title">
          <span class="js-pkmn-name">Feraligtr</span>
          <small class="js-pkmn-number">#160</small>
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body ">
        <dl class="dl-horizontal">

            <dt>Height</dt>
            <dd class="js-pkmn-height">23</dd>

            <dt>Weight</dt>
            <dd class="js-pkmn-weight">888</dd>

            <dt>Hit Points</dt>
            <dd class="js-pkmn-hp"></dd>

            <dt>Attack and Defense</dt>
            <dd class="js-pkmn-attack"></dd>
            <dd class="js-pkmn-defense"></dd>

            <dt>Special Attack and Special Defense</dt>
            <dd class="js-pkmn-sp_atk"></dd>
            <dd class="js-pkmn-sp_def"></dd>

            <dt>Speed</dt>
            <dd class="js-pkmn-speed"></dd>

            <dt>Types</dt>
            <dd class="js-pkmn-types"></dd>


            <dt>Image</dt>
            <dd><img src="" alt="" class="js-pkmn-image"></dd>

            <!-- <dt>Description</dt>
            <dd class="js-pkmn-descr"></dd> -->
        </dl>
      </div><!-- .modal-body -->

    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->
